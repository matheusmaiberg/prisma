{
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "Task",
      "Bash(npm run build:*)",
      "Bash(docker-compose:*)",
      "Bash(npm run typecheck:*)",
      "Bash(npm run:*)",
      "Bash(npx tsc:*)",
      "Bash(test:*)",
      "Bash(npx tsx:*)",
      "Bash(find:*)",
      "Bash(dir:*)",
      "Bash(findstr:*)",
      "SlashCommand(/prisma:implementacao-paralela ultrathink)",
      "SlashCommand(/prisma:implementacao-paralela:*)",
      "SlashCommand(/prisma:implementacao:revisar)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "bypassPermissions"
  },
  "enableAllProjectMcpServers": false,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/invoke-documentador.py",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"âœ… Arquivo salvo: $CLAUDE_FILE_PATHS\" >&2"
          }
        ]
      }
    ]
  }
}
